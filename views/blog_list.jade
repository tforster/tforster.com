extends layout_inside
block blog
   h2 Recent Blog 
      a(href="/blog/") Posts
   - each post in posts
      div.post
         div(class=post.type)!= post.date

         div
            p.title
               strong
                  a(href="/blog/"+post.id)!= post.title
            p.description !{post.description}
            p.content !{post.content}
            p.tags
               - each tag in post.tags
                  span #{tag}
         hr

  