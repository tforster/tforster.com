<!DOCTYPE html>
<html>

<head>
  {{#> head-block}}
  {{>head.hbs}}
  {{/head-block}}
</head>

<body cz-shortcut-listen="true">
  {{#> header-block}}
  {{>header.hbs}}
  {{/header-block}}

  <div class="bgimg-1 w3-display-container w3-opacity-min" id="home">
    <div class="w3-display-middle" style="white-space:nowrap;">
      <span class="w3-center w3-padding-large w3-black w3-xlarge w3-wide w3-animate-opacity">{{title}}</span>
    </div>
  </div>

  {{#> body-block}}{{body}}{{/body-block}}

  <div class="w3-content w3-container w3-padding-64" id="portfolio">
    <h3 class="w3-center">MY WORK</h3>
    <p class="w3-center"><em>A sample of personal and non-proprietary work projects</em></p>

    <div class="w3-row-padding w3-margin-top" id="thumbViewPortfolio">
      {{#each portfolioItems}}
      <div class="w3-third" style="margin-bottom:15px">
        <div class="w3-card-2">
          <a href="{{key}}"><img src="{{image}}" style="width:100%;height:294px" class="w3-hover-opacity w3-image"
              alt="{{caption}}" title="{{fields.title}}" /></a>
          <div class="w3-container" style="height:75px">
            <p>{{fields.title}}</p>

          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>





  {{#> footer-block}}
  {{!-- Custom <foot> content per page could be added. --}}
  {{>footer.hbs}}
  {{/footer-block}}

</body>

</html>
